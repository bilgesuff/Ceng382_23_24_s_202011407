@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <style>
        body, html {
            background-color: rgb(134, 170, 174);
           
        }
        
        .content-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 80%;
            max-width: 1200px;
        }

        .text-center {
            text-align: center;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            width: 100%;
        }

        .display-4 {
            font-size: 2.5rem;
            color: #333333;
            margin-bottom: 20px;
        }

        .text-center p {
            font-size: 1.2rem;
            color: #666666;
        }

        .text-center a {
            color: #007bff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .text-center a:hover {
            color: #0056b3;
            text-decoration: underline;
        }

        .info-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .info-box {
            margin-left: 20px;
            margin-right: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            flex: 1 1 calc(33.333% - 40px);
            box-sizing: border-box;
            max-width: calc(33.333% - 40px);
            min-width: 250px;
            text-align: center;
        }

        .info-box h3 {
            font-size: 1.5rem;
            color: #333333;
            margin-bottom: 10px;
        }

        .info-box p {
            font-size: 1rem;
            color: #666666;
        }
    </style>
</head>

<div class="content-wrapper">
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>

    <div class="info-container">
        <div class="info-box">
            <h3>Login and Registration</h3>
            <p>Create accounts and log in with a username and password.</p>
        </div>
        <div class="info-box">
            <h3>User Profile</h3>
            <p>View and edit profile information, and see booking history.</p>
        </div>
        <div class="info-box">
            <h3>List Reservations</h3>
            <p>Browse available rooms, view features, and check the weekly schedule.</p>
        </div>
        <div class="info-box">
            <h3>Reservation Page</h3>
            <p>Book rooms, select dates and time slots, and confirm reservations.</p>
        </div>
        <div class="info-box">
            <h3>My Reservations</h3>
            <p>View, edit, or cancel current and past reservations.</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
